<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          variant: 'secondary',
          text: 'Join the waitlist',
          href: 'https://forms.fillout.com/t/bHn1ZhE6oLus',
        },
      ]}
      isSticky
    />
  </Fragment>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Join The Oasis Partner Network"
    actions={[
      { variant: 'primary', target: '_blank', text: 'Submit Partner Application', href: 'https://forms.fillout.com/t/mu2yteekeuus' },
    ]}
    image={{
      src: 'https://images.pexels.com/photos/13032528/pexels-photo-13032528.jpeg?auto=compress&cs=tinysrgb&w=1200',
      alt: 'Oasis Hero Image',
    }}
  >
